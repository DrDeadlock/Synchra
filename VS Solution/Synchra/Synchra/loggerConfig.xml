    <log4net>
        <appender name="ConsoleAppender_UserMessages" type="log4net.Appender.ConsoleAppender">
     
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%message%newline" />
            </layout>
        </appender>

        <appender name="ConsoleAppender_SyncMessages" type="log4net.Appender.ConsoleAppender">
     
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%-5level %date{yyyy/MM/dd HH:mm:ss} %message%newline" />
            </layout>
        </appender>

        <appender name="FileAppender_SyncMessages" type="log4net.Appender.RollingFileAppender">
        <file type="log4net.Util.PatternString" value="%property{LogFileName}.txt" />
        <appendToFile value="true" />
        <PreserveLogFileNameExtension value="true" />
        <maximumFileSize value="4KB" />
        <maxSizeRollBackups value="10" />
 
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy/MM/dd HH:mm:ss} %-5level %message%newline" />
        </layout>
        </appender>
        
        <logger name="Synchra.Logging.Wrappers.ConsoleCommunicator">
            <level value="DEBUG" />
            <appender-ref ref="ConsoleAppender_UserMessages" />
        </logger>

        <logger name="Synchra.Logging.Wrappers.SynchronizationCommunicator">
            <level value="DEBUG" />
            <appender-ref ref="ConsoleAppender_SyncMessages" />
            <appender-ref ref="FileAppender_SyncMessages" />
        </logger>
    </log4net>